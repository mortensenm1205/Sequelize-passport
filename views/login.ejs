<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Sign-In</h1>
    <% if (message.length > 0) { %>
    <div><%= message %></div>
    <% } %>
    <form method="post">
      <label for="email">Email</label>
      <input type="text" name="email" id="email">
      <label for="password">Password</label>
      <input type="password" name="password" id="password">
      <input type="submit" name="submit" id="submit">
    </form>
  </body>
</html>
